<% @itenary.plans.each do |plan| %>
	<div class="col-sm-12 modal_links cursor-pointer" data-folder-path="<%=trip_folder_itenary_plan_path(:trip_id => @trip.name, :folder_id => @folder.name, :itenary_id => @itenary.name, :id => plan.name)%>">
		<div>
			<div class=" col-sm-1 plan-height plan-timing"><p><%= plan.name %></p></div>
			<div class="col-sm-10 plan-height plan-description"><%= plan.short_description[0..50]%></div>
		</div>
	</div>
<% end %>
<div class="col-sm-12">
	<div class="row">
	  	<div class="col-sm-4 col-sm-offset-3">
			<a type="button" class="btn btn-default modal_links btn-xs" data-folder-path="<%=new_trip_folder_itenary_plan_path(:trip_id => @trip.name, :folder_id => @folder.name, :itenary_id => @itenary.name)%>">
			<i class="fa fa-plus"></i> New plan
			</a>
	  	</div>
 	</div>
</div>