<div class="col-md-9">
    <ul class="timeline">
       <% for i in 0..@activities.length-1 %>
        <% if i%2 == 0 %>
          <li>
            <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h4 class="timeline-title"><%= @activities[i].trackable_type.classify.constantize.find_by_id(@activities[i].trackable_id).name %></h4>
                <p><small class="text-muted"><%= @activities[i].created_at %> by <%= User.find_by_id(@activities[i].owner_id).username%></small></p>
              </div>
              <div class="timeline-body">
                <p><%= @activities[i].key %></p>
              </div>
            </div>
          </li>
        <% else %>
          <li class="timeline-inverted">
            <div class="timeline-badge warning"><i class="glyphicon glyphicon-credit-card"></i></div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h4 class="timeline-title"><%= @activities[i].trackable_type.classify.constantize.find_by_id(@activities[i].trackable_id).name %></h4>
                 <p><small class="text-muted"><%= @activities[i].created_at %> by <%= User.find_by_id(@activities[i].owner_id).username%></small></p>
              </div>
              <div class="timeline-body">
                <p><%= @activities[i].key %></p>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
</div>