<%- model_class = Trip -%>
<div class="col-sm-9">
  <div class="row">
    <% @trip.folders.each do |folder| %>
      <div class="col-xs-4">
        <div class="panel panel-default folder-display-panel" data-folder-path="<%=trip_folder_path(:trip_id => @trip.name,:id => folder.name) %>">
          <div class="panel-body folders-display-body">
            <div class="row">
              <div class="col-xs-12">
                <%= image_tag folder.image_url(:display) if folder.image? %>
              </div>
              <div class="col-xs-12 description">
                  <%= folder.updated_at %>
              </div>
            </div>
          </div>
          <div class="panel-footer"><h5><%= folder.name.capitalize %></h5></div>
        </div>
      </div>
    <% end %>
      <div class="col-sm-4">
        <div class="panel panel-default ">
          <div class="panel-body">
              New Folder
              <%= link_to new_trip_folder_path(@trip), :method => :get, :class => '', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                 <i class="fa fa-plus fa-2x"></i>
              <%- end -%>
          </div>
          <div class="panel-footer">Panel footer</div>
        </div>
      </div>
  </div>
</div> 
<script>
  $(function(){
    $(document).on('click','.folder-display-panel', function(){
      window.location.href = $(this).attr("data-folder-path");
    })
  })

</script>

