<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => Photo %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @photo.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mode) %></dt>
      <dd><pre class="prettyprint"><%= @photo.mode %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
               trip_folder_photos_path(:trip_id => @trip.name, :folder_id => @folder.name), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_folder_photo_path(:trip_id => @trip.name, :folder_id => @folder.name, :id => @photo.name), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_folder_photo_path(:trip_id => @trip.name, :folder_id => @folder.name, :id => @photo.name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

