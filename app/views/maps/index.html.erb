<%- model_class = Folder -%>
<div class="row">
  <% @folder.maps.each do |map| %>
    <div class="col-xs-4">
      <div class="panel panel-default folder-display-panel" data-folder-path="<%=trip_folder_map_path(:trip_id => @trip.name,:folder_id => @folder.name, :id => map.name)%>">
        <div class="panel-body folders-display-body">
          <div class="row">
            <div class="col-xs-12">
              <%= map.description %>
            </div>
            <div class="col-xs-12 description">
               <span class="time"><%=map.updated_at%></span>
            </div>
          </div>
        </div>
        <div class="panel-footer"><h5><%= map.name.capitalize %></h5></div>
      </div>
    </div>
  <% end %>
    <div class="col-sm-4">
      <a type="button" class="btn btn-default pjax_links" data-folder-path="<%= new_trip_folder_map_path(:trip_id => @trip.name, :folder_id => @folder.name) %>">
        <i class="fa fa-plus"></i> New Map
      </a>
    </div>
</div>
<script>
  $(function(){
    $('.time').each(function(){
      $(this).html('updated '+moment($(this).html(), "YYYYMMDD").fromNow());
    });


  })

</script>

