<%- model_class = Discussion -%>
<div class="col-sm-9">
  <div class="row">
    <% @discussions.each do |discussion| %>
      <div class="col-xs-4">
        <div class="panel panel-default folder-display-panel" data-folder-path="<%=trip_folder_discussion_path(:trip_id => @trip.name,:folder_id => @folder.name, :id => discussion.name)%>">
          <div class="panel-body folders-display-body">
            <div class="row">
              <div class="col-xs-12">
                <%= discussion.name %>
              </div>
              <div class="col-xs-12 discussion">
                  <%= discussion.updated_at %>
              </div>
            </div>
          </div>
          <div class="panel-footer"><h5><%= discussion.name.capitalize %></h5></div>
        </div>
      </div>
    <% end %>
      <div class="col-sm-4">
        <div class="panel panel-default ">
          <div class="panel-body">
              New discussion
              <%= link_to new_trip_folder_discussion_path(:trip_id => @trip.name, :folder_id => @folder.name), :method => :get, :class => '', :name => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                 <i class="fa fa-plus fa-2x"></i>
              <%- end -%>
          </div>
          <div class="panel-footer">Panel footer</div>
        </div>
      </div>
  </div>
</div>  
