<%= form_for [@trip,@folder,@itenary,@plan], :html => { :class => 'form-horizontal form-model post-form' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :short_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :short_description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :date_time, :include_blank => true %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<div class="row">
  <input type="text" placeholder="name of description" name="descriptions" id="description_name">
  <button id="add_descripition" class="btn btn-primary">Add Description</button>
</div>
<script>
  var url = "<%= add_description_trip_folder_itenary_plan_path(:trip_id => @trip.name, :folder_id => @folder.name, :itenary_id =>@itenary.name, :id => @plan.name) %>"
  $(function(){
    $('#add_description').click(function(){
      $.ajax({
        url:url,
        data: {
          description: $('#description_name').val()
        },
        contentType: 'application/json; charset=utf-8',
        success: function(){
          console.log('There was success in adding user');
        },
        error: function(err){
          console.log('Tehre was an error in adding the user ',err);
        }
      })
    });
  })
</script>



