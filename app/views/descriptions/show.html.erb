<%- model_class = Description -%>
<div class="page-header">
  <h1><%=t '.title', :default => Description %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%=raw @description.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @description.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mode) %></dt>
      <dd><pre class="prettyprint"><%= @description.mode %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trip_folder_descriptions_path(:trip_id => @trip.name, :folder_id => @folder.name), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_folder_description_path(:trip_id => @trip.name, :folder_id => @folder.name, :id => @description.title), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_folder_description_path(:trip_id => @trip.name, :folder_id => @folder.name, :id => @description.title),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

